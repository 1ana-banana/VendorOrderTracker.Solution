@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h2>There are no orders to see here.</h2>
}

@foreach (Order element in Model)
{
  <h2><a href="orders/@element.GetListId()">@element.GetOrderId()</a></h2>
}

<p><a href="/orders/new">Add new order</a></p>
<p><a href="/vendors">Vendors</a></p>
<p><a href="/">Home</a></p>